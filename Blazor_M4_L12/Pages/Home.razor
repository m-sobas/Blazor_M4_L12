@page "/"

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<br />

<button class="btn btn-danger p-2 mt-3" @onclick="ShowModalDialog">Usuń pozycję</button>


@if (_modalDialogVisible)
{
    <ModalDialog
        OnClickDelete="OnClickDelete"
        OnClickCancel="OnClickCancel"
        Name="Blazor"
        Content="Czy jesteś pewien, że chcesz usunąć tę pozycję?">        
    </ModalDialog>
}

@if (_stateVisible)
{
    <h3 class="text-danger mt-4">Pozycja została pomyślnie usunięta.</h3>
}